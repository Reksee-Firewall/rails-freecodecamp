<div class="jumbotron">
  <h1 class="display-4"><%= @friend.firstname %> <%= @friend.last_name %></h1>
  <p class="lead"><%= @friend.description %></p>
  <hr class="my-4">
  <p>Email: <%= @friend.email %> | Phone: <%= @friend.phone %> | Twitter: <%= @friend.twitter %></p>
</div>

<div>
  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-primary" %>
  <%= link_to "Return", friends_path, class:"btn btn-primary" %>
</div>
