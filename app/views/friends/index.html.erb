<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th colspan='3'></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <%= render friend%>
          <td>
            <%= link_to "Show", friend %>
          </td>
          <td>
            <%= link_to "Edit", edit_friend_path(friend) %>
          </td>
          <td style="display: flex; justify-content: center;">
            <%= button_to "Delete Friend", friend, method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class:"btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Friend', new_friend_path, class:"btn btn-primary" %>